<%= form_for @address, as: :address, url: {controller: :addresses} do |f| %>
  <%= f.label :street_address %>
  <%= f.text_field :street_address %>
  <%= f.fields_for :city, @city do |city| %>
    <%= city.label :city_name %>
    <%= city.text_field :name %>
    <%= city.collection_select :state_id, @states, :id, :abbrv, prompt: "Select a state" %>
  <% end %>
  <%= f.fields_for :zipcode, @zipcode do |zipcode| %>
    <%= zipcode.label :zip %>
    <%= zipcode.text_field :zip %>
  <% end %>
  <%= hidden_field_tag 'type', params[:type] %>
  <%= f.submit "Add!" %>
<% end %>