<div>
  <h2>New Transaction %></h2>
  <p><%= @product.name %> | <%= @quantities %> | $<%= @product.price * @quantities %></p>
  <%= form_tag transactions_path(product_id: params[:product_id]) do%>
    <p>Please enter your payment details:</p>
    <div id="dropin"></div>
    <%=submit_tag "Pay" %>
  <%end%>
</div>